<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.supertridents.removebackground.object.remover">

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.supertridents.removebackground.object.remover.removeme"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RemoveMe">
        <activity android:name="com.supertridents.removebackground.object.remover.HelpActivity"></activity>
        <activity
            android:name="com.supertridents.removebackground.object.remover.CreditsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.intro_layout2Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.intro_layout1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.IntroAvtivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.FullImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.ShareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.CropActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.EraserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.SavedImagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.supertridents.removebackground.object.remover.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.supertridents.removebackground.object.remover.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5324429581828078~3799538810" />
    </application>

</manifest>